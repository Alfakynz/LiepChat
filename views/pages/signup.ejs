<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../components/head', { title: text['signup'] }) %>
</head>

<body>
  <%- include('../components/header', { title: text['signup'] }) %>
    <main>
      <section>
        <form action="/signup" method="post">
          <label for="username">
            <%= text['username'] %>:
          </label>
          <input type="text" name="username" id="username" />
          <br />
          <label for="password">
            <%= text['password'] %>:
          </label>
          <input type="password" name="password" id="password" />
          <br />
          <label for="confirmPassword">
            <%= text['confirmPassword'] %>:
          </label>
          <input type="password" name="confirmPassword" id="confirmPassword" />
          <br />
          <button type="submit">
            <%= text['signup'] %>
          </button>
        </form>
      </section>
      <%- include('../components/return_welcome') %>
    </main>
</body>

</html>