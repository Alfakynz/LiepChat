<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../components/head', { title: text['signup'] }) %>
</head>

<body>
  <%- include('../components/header', { title: text['signup'] }) %>
    <%- include('../components/nav') %>
      <main class="common signup">
        <section>
          <form action="/signup" method="post">
            <label for="username">
              <%= text['username'] %>:
            </label>
            <input type="text" name="username" id="username" placeholder="<%= text['username'] %>" autocomplete="off" />
            <br />
            <label for="password">
              <%= text['password'] %>:
            </label>
            <input type="password" name="password" id="password" placeholder="<%= text['password'] %>" />
            <br />
            <label for="confirmPassword">
              <%= text['confirmPassword'] %>:
            </label>
            <input type="password" name="confirmPassword" id="confirmPassword"
              placeholder="<%= text['confirmPassword'] %>" />
            <br />
            <button type="submit" class="signup">
              <%= text['signup'] %>
            </button>
          </form>
        </section>
      </main>
</body>

</html>